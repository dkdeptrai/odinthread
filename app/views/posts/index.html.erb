<h1>This is posts#index</h1>
<% @posts.each do |post| %>
	<h2>
		<%= link_to post.author.profile.name, user_profile_path(post.author, post.author.profile) %>
	</h2>
	<p><%= post.content %></p>
	<div style="display: flex; justify-content: flex-start; width: auto">
		<span><%= post.likes_count %></span>
		<% if post.liked_by?(current_user) %>
			<%= button_to 'Unlike', unlike_posts_path(post), method: 'delete' %>
		<% else %>
			<%= button_to 'Like', like_posts_path(post), method: 'post' %>
		<% end %>
	</div>
<% end %>
